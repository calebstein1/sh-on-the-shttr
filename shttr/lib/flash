set_flash() {
  flash_msg="$(echo $1 | tr ' ' '+')"
  printf "Set-Cookie: flash=${flash_msg}; secure\n"
}

set_error() {
  error_msg="$(echo $1 | tr ' ' '+')"
  printf "Set-Cookie: error=${error_msg}; secure\n"
}

read_flash() {
  parse_cookies
  flash="$(url_string_decode $flash)"
  error="$(url_string_decode $error)"
  printf "Set-Cookie: flash=; secure\n"
  printf "Set-Cookie: error=; secure\n"
}
